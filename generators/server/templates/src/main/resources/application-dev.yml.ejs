# ===================================================================
# Micronaut configuration for the "dev" environment.
#
# This configuration overrides the application.yml file.
#
# Full Micronaut configuration reference is available at:
# https://docs.micronaut.io/latest/guide/configurationreference.html
#
# More information on JHipster configuration properties:
# https://www.jhipster.tech/common-application-properties/
# ===================================================================

datasources:
  default:
    url: ${JDBC_URL:`jdbc:h2:mem:<%= lowercaseBaseName %>;DB_CLOSE_DELAY=-1;DB_CLOSE_ON_EXIT=FALSE`}
    username: ${JDBC_USER:<%= baseName %>}
    password: ${JDBC_PASSWORD:""}
    driverClassName: ${JDBC_DRIVER:org.h2.Driver}
    poolName: Hikari
    autoCommit: false

liquibase:
  datasources:
    default:
      async: true
      change-log: classpath:config/liquibase/master.xml
      contexts: dev,faker

jpa:
  default:
    packages-to-scan: <%=packageName%>.domain
    properties:
      hibernate:
<%_ if (['ehcache', 'caffeine', 'hazelcast', 'infinispan', 'memcached'].includes(cacheProvider)) { _%>
        javax:
          cache:
            missing_cache_strategy: create
<%_ } _%>
        hbm2ddl:
          auto: none
        show_sql: true
        id:
          new_generator_mappings: true
        connection:
          provider_disables_autocommit: true
        cache:
<%_ if (enableHibernateCache) { _%>
          use_second_level_cache: true
<%_ } else { _%>
          use_second_level_cache: false
<%_ } _%>
          use_query_cache: false
        generate_statistics: false

logging:
  level:
    ROOT: DEBUG
    io.github.jhipster: DEBUG
    <%=packageName%>: DEBUG

micronaut:
  server:
    port: 8080
    cors:
      # CORS is only enabled by default with the "dev" profile, so BrowserSync can access the API
      enabled: true
      configurations:
        default:
          exposed-headers:
            - Authorization
            - Link
            - X-Total-Count
  security:
    token:
      jwt:
        generator:
          access-token-expiration: 86400
        signatures:
          secret:
            generator:
              secret: <%= jwtSecretKey %>
              base64: true
              jws-algorithm: HS512

# ===================================================================
# JHipster specific properties
#
# Full reference is available at: https://www.jhipster.tech/common-application-properties/
# ===================================================================

jhipster:
<%_ if (['ehcache', 'caffeine', 'hazelcast', 'infinispan', 'memcached'].includes(cacheProvider)) { _%>
  cache: # Cache configuration
  <%_ if (cacheProvider === 'ehcache') { _%>
    ehcache: # Ehcache configuration
      time-to-live-seconds: 3600 # By default objects stay 1 hour in the cache
      max-entries: 100 # Number of objects in each cache entry
  <%_ } _%>
<%_ } _%>
  mail: # specific JHipster mail property, for standard properties see MailProperties
    from: <%= baseName %>@localhost
    base-url: http://127.0.0.1:8080
  metrics:
    logs: # Reports metrics in the logs
      enabled: false
      report-frequency: 60 # in seconds
  logging:
    use-json-format: false # By default, logs are not in Json format
    logstash: # Forward logs to logstash over a socket, used by LoggingConfiguration
      enabled: false
      host: localhost
      port: 5000
      queue-size: 512
